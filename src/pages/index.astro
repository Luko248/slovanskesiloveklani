---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import EventInfo from '../components/EventInfo.astro';
import Categories from '../components/Categories.astro';
import Attractions from '../components/Attractions.astro';
import Gallery from '../components/Gallery.astro';
import Registration from '../components/Registration.astro';
import Partners from '../components/Partners.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';
import SectionSeparator from '../components/SectionSeparator.astro';
---

<BaseLayout
  title="Slovanské Silové Klání 2026 | Silová soutěž v Pustiměři"
  description="Slovanské Silové Klání 2026 v Pustiměři: amatérská strongman soutěž, originální disciplíny, doprovodný program, lukostřelba, kovářská dílna a grilování."
  lang="cs"
>
  <Header lang="cs" />
  <main>
    <Hero lang="cs" />
    <SectionSeparator />

    <EventInfo lang="cs" />

    <Categories lang="cs" />

    <Attractions />
    <SectionSeparator reverse />

    <Registration />

    <Gallery lang="cs" />

    <Partners />

    <Contact />
    <SectionSeparator />
  </main>
  <Footer />
</BaseLayout>
