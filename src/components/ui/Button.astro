---
interface Props {
  href?: string;
  variant?: "primary" | "secondary";
  size?: "small" | "default" | "large";
  class?: string;
  [key: string]: any; // Allow other props like id, onclick, etc.
}

const {
  href,
  variant = "primary",
  size = "default",
  class: className = "",
  ...rest
} = Astro.props;

const baseStyles =
  "inline-flex items-center justify-center font-bold rounded-none transition-all duration-300 transform shadow-md hover:scale-105 cursor-pointer font-display tracking-wide w-full sm:w-auto";

const variants = {
  primary:
    "bg-viking-green text-white hover:bg-deep-green border border-viking-green/50",
  secondary:
    "bg-viking-gold/10 text-viking-gold border border-viking-gold/30 hover:bg-viking-gold hover:text-deep-charcoal backdrop-blur-sm",
};

const sizes = {
  small: "h-9 px-4 text-sm",
  default: "h-11 px-6 text-base",
  large: "h-14 px-8 text-lg uppercase tracking-wider",
};

const classes = [baseStyles, variants[variant], sizes[size], className].join(
  " ",
);

const Element = href ? "a" : "button";
---

<Element href={href} class={classes} {...rest}>
  <slot />
</Element>
