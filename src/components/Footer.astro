---
import { useTranslations } from "../i18n/utils";

// Force CS
const lang = "cs";
const t = useTranslations(lang);
---

<footer
  id="footer"
  class="bg-deep-charcoal text-gray-400 relative overflow-hidden"
>
  <!-- Background Pattern -->
  <div
    class="absolute inset-0 opacity-5 pointer-events-none"
    style="background-image: url('data:image/svg+xml,%3Csvg width=\'60\' height=\'60\' viewBox=\'0 0 60 60\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cpath d=\'M54.627 0l.83.828-1.415 1.415-.828-.828-.828.828-1.415-1.415.828-.828-.828-.828 1.415-1.415.828.828.828-.828 1.415 1.415-.828.828zM22.485 0l.83.828-1.415 1.415-.828-.828-.828.828-1.415-1.415.828-.828-.828-.828 1.415-1.415.828.828.828-.828 1.415 1.415-.828.828zM0 22.485l.828.83-1.415 1.415-.828-.828-.828.828L-3.658 22.485l.828-.828-.828-.828 1.415-1.415.828.828.828-.828 1.415 1.415-.828.828zM0 54.627l.828.83-1.415 1.415-.828-.828-.828.828L-3.658 54.627l.828-.828-.828-.828 1.415-1.415.828.828.828-.828 1.415 1.415-.828.828zM54.627 60l.83-.828-1.415-1.415-.828.828-.828-.828-1.415 1.415.828.828-.828.828 1.415 1.415.828-.828.828.828 1.415-1.415-.828-.828zM22.485 60l.83-.828-1.415-1.415-.828.828-.828-.828-1.415 1.415.828.828-.828.828 1.415 1.415.828-.828.828.828 1.415-1.415-.828-.828z\' fill=\'%23ffffff\' fill-rule=\'evenodd\'/%3E%3C/svg%3E');"
  >
  </div>

  <div class="container mx-auto px-4 py-20 relative z-10">
    <div class="grid md:grid-cols-2 gap-16 items-start">

      <!-- Branding + Social -->
      <div class="space-y-6">
        <a href="/" class="block group">
          <h3
            class="text-3xl font-display font-bold text-light-cream leading-tight tracking-wide group-hover:text-viking-gold transition-colors duration-300"
          >
            Slovanské<br />Silové Klání
          </h3>
        </a>

        <p class="text-base leading-relaxed text-gray-400">
          5. ročník amatérské silové soutěže, kde se rodí legendy. Pustiměř 2026.
        </p>

        <a
          href="https://www.facebook.com/events/pustim%C4%9B%C5%99sk%C3%A9-prusy-82-683-21-pustim%C4%9B%C5%99-%C4%8Desko/slovansk%C3%A9-silov%C3%A9-kl%C3%A1n%C3%AD-2026/1548808152984882/"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-3 px-5 py-3 bg-viking-gold/10 border border-viking-gold/30 hover:bg-viking-gold hover:text-deep-charcoal transition-all duration-300 group"
        >
          <svg
            class="w-5 h-5 text-viking-gold group-hover:text-deep-charcoal transition-colors"
            fill="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"
            ></path>
          </svg>
          <span class="font-bold uppercase tracking-wide text-sm">Facebook Událost</span>
        </a>

        <div class="flex items-start gap-3 text-gray-300">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="size-5 text-viking-gold mt-0.5 shrink-0"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"></path>
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z"
            ></path>
          </svg>
          <span class="leading-relaxed">
            Pustiměřské Prusy, hasičská zbrojnice<br />Česká Republika
          </span>
        </div>
      </div>

      <!-- Map -->
      <div class="space-y-4">
        <div
          class="h-64 bg-stone/50 overflow-hidden relative shadow-2xl border border-white/10 group"
        >
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m17!1m12!1m3!1d800!2d17.028537!3d49.317780!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m2!1m1!2z49LjMxNzc4LE4gMTcuMDI4NTQsRQ!5e0!3m2!1scs!2scz"
            width="100%"
            height="100%"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
          ></iframe>
          <a
            href="https://www.google.com/maps?q=49.317780,17.028537"
            target="_blank"
            class="absolute bottom-3 right-3 bg-white text-black px-3 py-1.5 font-bold text-xs shadow-lg hover:bg-gray-200 transition-colors"
          >
            Otevřít v mapách
          </a>
        </div>
      </div>
    </div>

    <div
      class="mt-16 pt-8 border-t border-white/10 flex flex-col md:flex-row justify-between items-center text-sm text-gray-500 gap-2"
    >
      <p>
        &copy; {new Date().getFullYear()} Slovanské Silové Klání. {t("footer.rights")}
      </p>
      <p class="opacity-50">Created by <a href="https://lukaschylik.dev/" target="_blank" rel="noopener noreferrer" class="text-viking-gold underline hover:text-viking-gold/80 transition-colors">Lukáš Chylík</a></p>
    </div>
  </div>
</footer>
