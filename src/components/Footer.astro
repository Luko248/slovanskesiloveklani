---
import { useTranslations } from '../i18n/utils';
import Button from './ui/Button.astro';

// Force CS
const lang = 'cs';
const t = useTranslations(lang);
---

<footer id="footer" class="bg-deep-charcoal text-gray-400 relative overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-5 pointer-events-none" style="background-image: url('data:image/svg+xml,%3Csvg width=\'60\' height=\'60\' viewBox=\'0 0 60 60\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cpath d=\'M54.627 0l.83.828-1.415 1.415-.828-.828-.828.828-1.415-1.415.828-.828-.828-.828 1.415-1.415.828.828.828-.828 1.415 1.415-.828.828zM22.485 0l.83.828-1.415 1.415-.828-.828-.828.828-1.415-1.415.828-.828-.828-.828 1.415-1.415.828.828.828-.828 1.415 1.415-.828.828zM0 22.485l.828.83-1.415 1.415-.828-.828-.828.828L-3.658 22.485l.828-.828-.828-.828 1.415-1.415.828.828.828-.828 1.415 1.415-.828.828zM0 54.627l.828.83-1.415 1.415-.828-.828-.828.828L-3.658 54.627l.828-.828-.828-.828 1.415-1.415.828.828.828-.828 1.415 1.415-.828.828zM54.627 60l.83-.828-1.415-1.415-.828.828-.828-.828-1.415 1.415.828.828-.828.828 1.415 1.415.828-.828.828.828 1.415-1.415-.828-.828zM22.485 60l.83-.828-1.415-1.415-.828.828-.828-.828-1.415 1.415.828.828-.828.828 1.415 1.415.828-.828.828.828 1.415-1.415-.828-.828zM32 11.414l-2.828-2.828L32 5.758l2.828 2.828L32 11.414zM4.172 11.414l2.828-2.828L4.172 5.758 1.344 8.586l2.828 2.828zm27.828 27.828l2.828-2.828L32 33.586l-2.828 2.828 2.828 2.828zm27.828 0l2.828-2.828L64.172 33.586l-2.828 2.828 2.828 2.828zM33.414 4.828l2.828 2.828L39.07 4.828 36.242 2l-2.828 2.828zm-27.828 0l2.828 2.828L11.242 4.828 8.414 2 5.586 4.828zM33.414 36.242l2.828 2.828 2.828-2.828-2.828-2.828-2.828 2.828zM5.586 36.242l2.828 2.828 2.828-2.828-2.828-2.828-2.828 2.828z\' fill=\'%23ffffff\' fill-rule=\'evenodd\'/%3E%3C/svg%3E');"></div>

    <div class="container mx-auto px-4 py-16 relative z-10">
        <div class="grid lg:grid-cols-3 gap-12 lg:gap-20 items-start">

            <!-- Info -->
            <div class="space-y-6">
                <div class="flex items-center gap-3 mb-6">
                     <!-- Heroicon: Bolt (matching Category Women for Gym theme) -->
                     <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-12 text-viking-green">
                       <path stroke-linecap="round" stroke-linejoin="round" d="m3.75 13.5 10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75Z" />
                     </svg>
                     <h3 class="text-3xl font-display font-bold text-light-cream leading-none">Slovanské <br/>Silové Klání</h3>
                </div>
                <p class="text-lg text-gray-400">
                    5. ročník amatérské silové soutěže, kde se rodí legendy. Pustiměř 2026.
                </p>
                <div class="flex gap-4 pt-2">
                     <!-- Facebook (Brand) -->
                     <a href="https://www.facebook.com/events/pustim%C4%9B%C5%99sk%C3%A9-prusy-82-683-21-pustim%C4%9B%C5%99-%C4%8Desko/slovansk%C3%A9-silov%C3%A9-kl%C3%A1n%C3%AD-2026/1548808152984882/" target="_blank" rel="noopener noreferrer" class="bg-black/30 w-12 h-12 flex items-center justify-center rounded-none hover:bg-viking-green hover:text-white transition-all transform hover:scale-110 border border-white/10">
                        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"/></svg>
                     </a>
                </div>
            </div>

            <!-- Contact -->
            <div class="space-y-6">
                <h3 class="text-2xl font-display font-bold text-light-cream border-l-4 border-viking-green pl-4">Kontakt</h3>
                <div class="space-y-4">
                    <div class="flex flex-col gap-2">
                         <span class="text-sm font-semibold text-gray-500 uppercase">Email</span>
                         <Button 
                           href="mailto:SlovanskeSiloveKlani@gmail.com" 
                           variant="primary"
                           size="small"
                           class="w-max gap-2 shadow-lg hover:text-white"
                         >
                            <!-- Heroicon: Envelope -->
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75" />
                            </svg>
                            Kontaktovat Organizátora
                         </Button>
                    </div>

                    <div class="flex flex-col gap-2">
                        <span class="text-sm font-semibold text-gray-500 uppercase">Adresa</span>
                        <div class="flex items-start gap-3 text-white">
                            <!-- Heroicon: Map Pin -->
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 text-viking-green mt-0.5">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                              <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
                            </svg>
                            <span>Pustiměřské Prusy, hasičská zbrojnice<br/>Česká Republika</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Map -->
            <div class="h-64 bg-stone/50 rounded-none overflow-hidden relative shadow-2xl border-2 border-white/10 group">
                 <iframe
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2602.5!2d17.03!3d49.28!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4712f3b9c0c0c0c1%3A0x0!2sHasi%C4%8Dsk%C3%A1%20zbrojnice%20Pustim%C4%9B%C5%99sk%C3%A9%20Prusy!5e0!3m2!1sen!2scz!4v1620000000000!5m2!1sen!2scz"
                    width="100%"
                    height="100%"
                    style="border:0;"
                    allowfullscreen=""
                    loading="lazy"
                    class="grayscale group-hover:grayscale-0 transition-all duration-500 opacity-80 group-hover:opacity-100"
                ></iframe>
                <a href="https://maps.google.com/?q=Pustiměřské+Prusy+hasičská+zbrojnice" target="_blank" class="absolute bottom-4 right-4 bg-white text-black px-4 py-2 rounded-none font-bold text-sm shadow-lg hover:bg-gray-200 transition-colors">
                    Otevřít v mapách
                </a>
            </div>
        </div>

        <div class="mt-16 pt-8 border-t border-white/10 flex flex-col md:flex-row justify-between items-center text-sm text-gray-500">
            <p>&copy; {new Date().getFullYear()} Slovanské Silové Klání. {t('footer.rights')}</p>
            <p class="mt-2 md:mt-0 opacity-50">Designed for Warriors</p>
        </div>
    </div>
</footer>
