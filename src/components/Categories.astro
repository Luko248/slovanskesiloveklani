---
interface Props {
  lang: 'cs' | 'en';
}

const { lang } = Astro.props;

const categories = [
    { weight: "Do 85 kg", label: "< 85kg", color: "from-blue-600 to-blue-800" },
    { weight: "Do 95 kg", label: "< 95kg", color: "from-green-600 to-green-800" },
    { weight: "Nad 95 kg", label: "> 95kg", color: "from-red-600 to-red-800" },
];
---

<section id="categories" class="py-20 bg-light-cream dark:bg-stone/10 border-t border-bronze/10 dark:border-white/5">
    <div class="container mx-auto px-4 text-center">
        <h2 class="text-4xl md:text-5xl font-display font-bold mb-16 text-charcoal dark:text-light-cream">
            {lang === 'cs' ? 'Závodní kategorie' : 'Competition Categories'}
        </h2>

        <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
            {categories.map((cat, index) => (
                <div class="group relative p-8 rounded-xl bg-white dark:bg-slate shadow-xl border-2 border-transparent hover:border-bronze dark:hover:border-silver transition-all duration-300 hover:-translate-y-2">
                    
                    <!-- Icon/Badge -->
                    <div class={`w-20 h-20 mx-auto rounded-full bg-gradient-to-br ${cat.color} flex items-center justify-center mb-6 shadow-lg group-hover:scale-110 transition-transform`}>
                        <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3"></path></svg>
                    </div>

                    <h3 class="text-2xl font-display font-bold mb-2">{cat.weight}</h3>
                    <p class="text-stone dark:text-gray-400 mb-6">
                        {lang === 'cs' 
                           ? 'Stejné disciplíny pro všechny kategorie.' 
                           : 'Same disciplines for all categories.'}
                    </p>
                    
                    <div class="w-full h-1 bg-gray-200 dark:bg-gray-700 rounded-full overflow-hidden">
                        <div class={`h-full bg-gradient-to-r ${cat.color} w-3/4`}></div>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>
