---
import { useTranslations } from "../i18n/utils";
import Button from "./ui/Button.astro";

const { lang = "cs" } = Astro.props;
const t = useTranslations(lang);

const navItems = [
  { label: t("nav.about"), href: "#about" },
  { label: t("nav.categories"), href: "#categories" },
  { label: t("nav.registration"), href: "#registration" },
  { label: t("nav.gallery"), href: "#gallery" },
  { label: t("nav.contact"), href: "#contact" },
];
---

<header
  class="fixed top-0 w-full z-50 transition-all duration-300 bg-black/90 backdrop-blur-md border-b border-viking-green/20 shadow-lg h-[72px] flex items-center"
>
  <div class="container mx-auto px-4 flex items-center justify-between h-full">
    <!-- Logo -->
    <a href="/" class="group flex items-center justify-start shrink-0">
      <span
        class="font-display text-xl font-bold text-light-cream tracking-widest group-hover:text-viking-gold transition-colors duration-300 drop-shadow-sm uppercase"
      >
        <span class="md:hidden">SSK</span>
        <span class="hidden md:inline">Slovanské Silové Klání</span>
      </span>
    </a>

    <!-- Desktop Navigation -->
    <nav
      class="hidden lg:flex items-center justify-center gap-6 absolute left-1/2 transform -translate-x-1/2"
    >
      {
        navItems.map((item) => (
          <a
            href={item.href}
            class="font-display text-lg text-light-cream hover:text-viking-green transition-colors relative group whitespace-nowrap"
          >
            {item.label}
            <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-viking-green transition-all duration-300 group-hover:w-full" />
          </a>
        ))
      }
    </nav>

    <!-- Right Actions -->
    <div class="flex items-center gap-4 justify-end shrink-0">
      <!-- Calendar Button — completely hidden below lg, visible in burger menu instead -->
      <button
        id="add-to-calendar-btn"
        class="hidden lg:inline-flex items-center justify-center gap-2 font-bold font-display tracking-wide rounded-none transition-all duration-300 shadow-md hover:scale-105 cursor-pointer bg-viking-gold/10 text-viking-gold border border-viking-gold/30 hover:bg-viking-gold hover:text-deep-charcoal backdrop-blur-sm h-9 px-4 text-sm"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="size-5"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 0 1 2.25-2.25h13.5A2.25 2.25 0 0 1 21 7.5v11.25m-18 0A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75m-18 0v-7.5A2.25 2.25 0 0 1 5.25 9h13.5A2.25 2.25 0 0 1 21 11.25v7.5m-9-6h.008v.008H12v-.008ZM12 15h.008v.008H12V15Zm0 2.25h.008v.008H12v-.008ZM9.75 15h.008v.008H9.75V15Zm0 2.25h.008v.008H9.75v-.008ZM7.5 15h.008v.008H7.5V15Zm0 2.25h.008v.008H7.5v-.008Zm6.75-4.5h.008v.008h-.008v-.008Zm0 2.25h.008v.008h-.008V15Zm0 2.25h.008v.008h-.008v-.008Zm2.25-4.5h.008v.008H16.5v-.008Zm0 2.25h.008v.008H16.5V15Z"
          ></path>
        </svg>
        Do Kalendáře
      </button>

      <!-- Burger Button with animation -->
      <button
        id="mobile-menu-btn"
        class="burger lg:hidden relative w-10 h-10 flex items-center justify-center"
        aria-label="Menu"
        aria-expanded="false"
      >
        <span class="burger-line burger-line--top"></span>
        <span class="burger-line burger-line--middle"></span>
        <span class="burger-line burger-line--bottom"></span>
      </button>
    </div>
  </div>

  <!-- Mobile Menu Overlay -->
  <div
    id="mobile-menu"
    class="mobile-menu fixed top-[72px] left-0 w-full h-[calc(100dvh-72px)] bg-deep-charcoal/95 backdrop-blur-xl z-40 flex flex-col overflow-y-auto border-t border-viking-green/20"
  >
    <nav class="flex flex-col items-center justify-center flex-1 gap-2 px-6 py-8">
      {
        navItems.map((item, idx) => (
          <a
            href={item.href}
            class="mobile-link font-display text-2xl font-bold text-center py-4 text-light-cream hover:text-viking-green transition-colors w-full border-b border-white/5"
            style={`--delay: ${idx * 0.05}s`}
          >
            {item.label}
          </a>
        ))
      }
      <div class="mt-8 w-full max-w-xs mx-auto">
        <Button
          id="mobile-calendar-btn"
          variant="secondary"
          size="default"
          class="w-full h-12 mobile-link"
          style="--delay: 0.25s"
        >
          Přidat do kalendáře
        </Button>
      </div>
    </nav>
  </div>
</header>

<style>
  /* ── Burger lines ── */
  .burger-line {
    position: absolute;
    inline-size: 1.5rem;
    block-size: 2px;
    background-color: var(--color-light-cream);
    transition: transform 0.3s ease, opacity 0.3s ease;
  }

  .burger-line--top {
    transform: translateY(-7px);
  }

  .burger-line--middle {
    transform: translateY(0);
  }

  .burger-line--bottom {
    transform: translateY(7px);
  }

  /* Active state — X shape */
  .burger.is-active .burger-line--top {
    transform: translateY(0) rotate(45deg);
  }

  .burger.is-active .burger-line--middle {
    opacity: 0;
  }

  .burger.is-active .burger-line--bottom {
    transform: translateY(0) rotate(-45deg);
  }

  /* ── Mobile menu ── */
  .mobile-menu {
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
  }

  .mobile-menu.is-open {
    opacity: 1;
    visibility: visible;
  }

  /* Staggered link entrance */
  .mobile-menu .mobile-link {
    opacity: 0;
    transform: translateY(1rem);
    transition: opacity 0.3s ease, transform 0.3s ease, color 0.3s ease;
    transition-delay: var(--delay, 0s);
  }

  .mobile-menu.is-open .mobile-link {
    opacity: 1;
    transform: translateY(0);
  }
</style>

<script>
  import { downloadICS } from "../utils/calendar";

  const burger = document.getElementById("mobile-menu-btn");
  const menu = document.getElementById("mobile-menu");
  const calendarBtn = document.getElementById("add-to-calendar-btn");
  const mobileCalendarBtn = document.getElementById("mobile-calendar-btn");
  const mobileLinks = document.querySelectorAll(".mobile-link");

  function openMenu() {
    burger?.classList.add("is-active");
    burger?.setAttribute("aria-expanded", "true");
    menu?.classList.add("is-open");
    document.body.style.overflow = "hidden";
  }

  function closeMenu() {
    burger?.classList.remove("is-active");
    burger?.setAttribute("aria-expanded", "false");
    menu?.classList.remove("is-open");
    document.body.style.overflow = "";
  }

  function toggleMenu() {
    if (menu?.classList.contains("is-open")) {
      closeMenu();
    } else {
      openMenu();
    }
  }

  burger?.addEventListener("click", toggleMenu);

  mobileLinks.forEach((link) => {
    link.addEventListener("click", closeMenu);
  });

  // Close on Escape key
  document.addEventListener("keydown", (e) => {
    if (e.key === "Escape" && menu?.classList.contains("is-open")) {
      closeMenu();
    }
  });

  calendarBtn?.addEventListener("click", downloadICS);
  mobileCalendarBtn?.addEventListener("click", downloadICS);
</script>
